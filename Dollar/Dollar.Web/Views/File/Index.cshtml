@{
    ViewBag.Title = "File Upload";
}

@section Head
{
    <style type="text/css">
        .file-upload {
            margin-top: 30px;
            font-size: 11pt;
            font-weight: bold;
        }

        .m-t-10 {
            margin-top: 10px;
        }

        .validation-summary-errors ul {
            border: solid 1px #ffa3a3;
            background-color: #fad7d7;
            padding: 6px;
            list-style: none;
        }

        .validation-summary-errors ul li,
        .validation-message {
            color: #cf201d;
        }
    </style>
}

<div class="row">
    <div class="col-sm-12 col-md-6 col-md-push-3">
        <div class="row">
            <div class="col-sm-12 m-t-10">
                @Html.ValidationSummary(false)
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12 animated slideInUp">
                @using (Html.BeginForm("ProcessFile", "File", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <h4><i class="fa fa-list-alt"></i> Basic File Upload:</h4>
                    <div class="row">
                        <div class="col-sm-12 file-upload">
                            <input type="file" name="file" class="btn btn-info btn-block"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 text-right m-t-10">
                            <input type="submit" class="btn btn-primary" value="Upload"/>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>