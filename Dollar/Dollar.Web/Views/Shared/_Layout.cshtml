@{ Layout = null; }

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">
        <meta http-equiv="cache-control" content="max-age=0" />
        <meta http-equiv="cache-control" content="no-cache" />
        <meta http-equiv="expires" content="0" />
        <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
        <meta http-equiv="pragma" content="no-cache" />

        <title>@ViewBag.Title</title>

        <link href="@Url.Content("~/Assets/Styles/bootstrap.min.css")" rel="stylesheet" />
        <link href="@Url.Content("~/Assets/Styles/bootstrap-theme.min.css")" rel="stylesheet" />
        <link href="@Url.Content("~/Assets/Styles/font-awesome.min.css")" rel="stylesheet"/>
        <link href="@Url.Content("~/Assets/Styles/animate.min.css")" rel="stylesheet" />

        @RenderSection("Head", false)
    </head>
    <body>
        @RenderSection("PreBody", false)

        <div class="container-fluid">
            @RenderBody()
        </div>
    
        @RenderSection("PostBody", false)

        <script src="@Url.Content("~/Assets/Scripts/jquery.min.js")"></script>
        <script src="@Url.Content("~/Assets/Scripts/bootstrap.min.js")"></script>

        @RenderSection("Scripts", false)
    </body>
</html>