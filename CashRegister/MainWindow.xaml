<Window x:Class="CashRegister.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CashRegister"
        mc:Ignorable="d"
        Title="Cash Register Solution - Tyler Meduho" Height="325" Width="700">
    <Grid>
        <GroupBox Header="Input File" Height="72" Margin="10,10,10,0" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="txtFilePath" MinWidth="575" Margin="8,0,5,12" VerticalContentAlignment="Center" Height="26" VerticalAlignment="Bottom"  />
                <Button x:Name="btnBrowse" Content="Browse..." Margin="0,0,0,12" MinWidth="60" Click="btnBrowse_Click" Height="26" VerticalAlignment="Bottom" />
            </StackPanel>
        </GroupBox>
        <Button x:Name="btnProcess" Content="Process File" Margin="10,90,10,0" VerticalAlignment="Top" Click="btnProcess_Click"/>
        <TextBox x:Name="txtLog" Margin="10,125,10,10" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
