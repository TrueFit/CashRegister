<Window x:Class="CashRegister.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:properties="clr-namespace:CashRegister.Properties"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Settings"
        Height="Auto" Width="Auto"
        DataContext="{Binding Path=SettingsViewModel, Source={StaticResource ViewModelLocator}}">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{x:Static properties:Resources.Settings_RandomDivisorLabel}"
                       Margin="0,0,12,0"/>
            <xctk:IntegerUpDown DefaultValue="3" />
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{x:Static properties:Resources.Settings_CurrentLanguageLabel}" />
            <ListBox IsEnabled="False" ItemsSource="{Binding Languages}"/>
        </StackPanel>
    </StackPanel>
</Window>
